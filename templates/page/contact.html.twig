{% extends 'base.html.twig' %}

{% block title %}Contact - E-commerce Symfony{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Contactez-nous</h1>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h2 class="text-primary mb-4">Nos coordonnées</h2>
                            
                            <div class="d-flex align-items-center mb-4">
                                <div class="bg-primary rounded-circle p-3 me-3">
                                    <i class="bi bi-geo-alt text-white" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Adresse</h5>
                                    <p class="mb-0 text-muted">123 Rue du Commerce, 75000 Paris, France</p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-4">
                                <div class="bg-primary rounded-circle p-3 me-3">
                                    <i class="bi bi-telephone text-white" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Téléphone</h5>
                                    <p class="mb-0 text-muted">+33 1 23 45 67 89</p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-4">
                                <div class="bg-primary rounded-circle p-3 me-3">
                                    <i class="bi bi-envelope text-white" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Email</h5>
                                    <p class="mb-0 text-muted">contact@ecommerce-symfony.com</p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center">
                                <div class="bg-primary rounded-circle p-3 me-3">
                                    <i class="bi bi-clock text-white" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Heures d'ouverture</h5>
                                    <p class="mb-0 text-muted">Lundi - Vendredi: 9h00 - 18h00</p>
                                    <p class="mb-0 text-muted">Samedi: 10h00 - 16h00</p>
                                    <p class="mb-0 text-muted">Dimanche: Fermé</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h2 class="text-primary mb-4">Envoyez-nous un message</h2>
                            
                            <form>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Nom complet</label>
                                    <input type="text" class="form-control" id="name" placeholder="Votre nom">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Votre email">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Sujet</label>
                                    <input type="text" class="form-control" id="subject" placeholder="Sujet de votre message">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" rows="5" placeholder="Votre message"></textarea>
                                </div>
                                
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-send"></i> Envoyer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <h2 class="text-primary mb-4">Nous trouver</h2>
                    <div class="ratio ratio-16x9">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.9916256937595!2d2.292292615509614!3d48.85836507928746!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1651245362329!5m2!1sfr!2sfr" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}